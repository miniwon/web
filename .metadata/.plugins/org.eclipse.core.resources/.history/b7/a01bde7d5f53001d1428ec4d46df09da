<!-- CDN 방식 -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	
	$("#here").click(function(){
		$("#here").text("마우스 클릭함");
	});
	
	$("#here").mouseover(function(){
		$(this).text("마우스가 올라감")
		$(this).css({'background':'mistyrose'})
	});
	$("#here").mouseout(function(){
		$(this).text("마우스 다시 나감 ㅜㅜ")
		$(this).css({"background":"aliceblue"})
	});
	$("#here").hover(function(){
		$(this).css({"border":"2px solid dodgerblue"});
	}, function(){
		$(this).css({"border":"2px dotted yellowgreen"})	
	});
/*	$("div#here").hide();
	var n = $("#student > #name");
	alert(n.text());
	n.text("길동쓰빠리");
	alert(n.text());*/
	
	// hide() / show()
	// 효과 함수
//	$("#here").fadeOut(2000).fadeIn(2000);
	$("#here").slideUp(2000);
	
});
</script>
</head>
