$(function() {

	// 초기화면 구성을 위한 가리기
	$(".dmenu").hide();
	$(".cmenu").hide();
	$(".hmenu").hide();
	$(".menutbl").hide();
	$(".htb").hide();
	$(".last").hide();



	$('#home').click(function() {  // 나와라 선택화면 
		alert("s")
		$('#home').attr("src", "./img/menu/togo_on.png");
	});
	$('#here').click(function() {  // 나와라 선택화면 
		var src = $(this).attr('src');
		$(this).attr('src', src.replace('off', 'on'));
	});
	$('#reset').click(function() {  // 나와라 선택화면 
		$(".dmenu").hide();
		$(".cmenu").hide();
		$(".hmenu").hide();
		$(".menutbl").hide();
		$(".htb").hide();
		$(".last").hide();
		$(".cu").show();

	});


	$('.heretogo:eq(0)').click(function() {  // 나와라 선택화면 
		alert("매장");
		$("#firstPage").hide();
		$(".menutbl").show();
		$(".hmenu").show();
		$(".htb").show();
		$(".last").show();
	});


	$('.heretogo:eq(1)').click(function() {
		alert("포장");
		$("#firstPage").hide();
		$(".menutbl").show();
		$(".hmenu").show();
		$(".htb").show();
		$(".last").show();

	});


	$('.rollover:eq(0)').click(function() { //햄버거
		alert("햄벅1");
		$(".hmenu").show();
		$(".dmenu").hide();
		$(".cmenu").hide();
		var src = $(this).attr('src');
		$(this).attr('src', src.replace('off', 'on'));
		alert("햄벅2");


	});
	$('.rollover:eq(1)').click(function() {
		$(".dmenu").hide();
		$(".hmenu").hide();
		$(".cmenu").show();
		var src = $(this).attr('src');
		$(this).attr('src', src.replace('off', 'on'));



	});
	$('.rollover:eq(2)').click(function() {

		$(".dmenu").show();
		$(".hmenu").hide();
		$(".cmenu").hide();
		var src = $(this).attr('src');
		$(this).attr('src', src.replace('off', 'on'));

	});

	$('.hmenu img').click(function() {

		window.open("main2.html", "",
			"width =500 , height =600")

		alert("눌림")

	});


	$('.cmenu span').click(function() {
		var cn = $(this).text();
		alert(cn)
		var tr = $('<tr/>');

		var td1 = $('<td>' + cn + '</td>')

		tr.append(td1)

		$('#listtr').append(tr)
	});


	$('.dmenu img').click(function() {


		alert("눌림")

	});

	$('.m1').click(function() {



		alert("단품 선택")

	});
	$('.m2').click(function() {
		alert("세트 선택")

	});




})

