/**
 * 
 */
$(function() {
	$("#hideButton").click(function() {
		$("#intro > img").fadeOut(2000);
	});
	$("#showButton").click(function() {
		$("#intro > img").fadeIn(2000)
	});
	$("#toggleButton").mouseover(function(){
		$("#intro > img").hide();
	});
	$("#toggleButton").mouseout(function(){
		$("#intro > img").show();
	})
});